{# src/BlogBundle/ressources/views/Default/index.html.twig #}

{% extends "NAOBundle::layout.html.twig" %}

{% block body %}

<!-- SECTION ARTICLE BLOG -->
{% for post in posts %}
<article id="blog" class="my-5">
    <div class="container bg-cream">
        <div class="row py-5">
            <div class="col-12 text-center">
                <h1>{{ post.title }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col px-4 pb-4">
    {% if post.BlogImages.snapshot is empty %}
        <div class="img-responsiv">
            <img src="{{ app.request.basePath }}/img/image-not-available.jpg" alt="" class="img-fluid">
         </div>
    {% elseif (post.BlogImages.snapshot|length) < 2 %}
        {% for p in post.BlogImages %}
        <div class="img-responsiv">
            <img src="{{ app.request.basePath }}/img/posts/{{ p.file|striptags }}" alt="" class="img-fluid">
        </div>
        {% endfor %}
    {% else %}
        <div id="carouselBlog" class="carousel slide" data-ride="carousel">
                    <!--<ol class="carousel-indicators">
                       <li data-target="#carouselBlog" data-slide-to="0" class="active"></li>
                       <li data-target="#carouselBlog" data-slide-to="1"></li>
                       <li data-target="#carouselBlog" data-slide-to="2"></li>
                       <li data-target="#carouselBlog" data-slide-to="3"></li>
                    </ol>-->
            <div class="carousel-inner">
                {% for p in post.BlogImages %}
                    {% if loop.first %}
                        <div class="carousel-item active">
                            <img src="{{ app.request.basePath }}/img/posts/{{ p.file|striptags }}" alt="" class="img-caroussel">
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img src="{{ app.request.basePath }}/img/posts/{{ p.file|striptags }}" alt="" class="img-caroussel">
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselBlog" role="button" data-slide="prev">
                <span class="fa fa-chevron-circle-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselBlog" role="button" data-slide="next">
                <span class="fa fa-chevron-circle-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4">Auteur : {{ post.user.salt|title }}</div>
            <div class="col-12 col-md-4">Date : {{ post.date|date("d/m/Y") }}</div>
            <div class="col-12 py-5">
                <p>{{ post.content|striptags }}</p>
            </div>
        </div>
    </div>
</article>
{% endfor %}

    <div class="row justify-content-center">
        <div class="col-12 col-md-4 text-center" id="posts-refresh">
            <a class="btn btn-success btn-block p-3" id="show-more-post">Voir plus</a>
        </div>
    </div>

<section class="back-up d-none d-md-block">
    <div class="container">
        <div class="row justify-content-end">
            <a href="#" title="Remonter vers le haut de la page">
                <img src="../img/bird-up.png" alt="" class="bird-up">
            </a>
        </div>
    </div>
</section>

{% endblock %}