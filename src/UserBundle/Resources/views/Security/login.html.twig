{% extends '@NAO/layout.html.twig' %}
{% block title %}
    Login - NAO
{% endblock %}

{% block body %}
    <!-- SE CONNECTER -->
    <div id="connexion-section" class="py-5">
        <div class="container">
            <div class="row justify-content-center pb-3">
                <h4>Se connecter avec</h4>
            </div>
            <div class="row justify-content-center">
                <div class="col-3 col-md-2">
                    <a href="{{ path('user_fb_connect') }}" class="btn btn-primary btn-block">
                        <i class="fa fa-facebook"></i>
                    </a>
                </div>
                <div class="col-3 col-md-2">
                    <a href="{{ path('user_gg_connect') }}" class="btn btn-danger btn-block">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>
            </div>
            <div class="row justify-content-center pt-5 pb-3">
                <h4>Ou avec votre e-mail</h4>
            </div>
            {# show error #}
            {% if error %}
                <div class="alert alert-danger">{{ error.message | replace({"Bad credentials." : "Invalide email ou mot de passe.",
                        "User account is disabled.": "Ce compte n'existe pas."}) }}</div>
            {% endif %}

            {# login form #}
            <form action="{{ path('login_check') }}" method="post">
                <div class="row justify-content-center">
                    <div class="form-group col-12 col-md-4">
                        <label for="mail">Adresse mail</label>
                        <input type="text" name="_email" id="mail" class="form-control" value="{{ last_username }}">
                    </div>
                    <div class="form-group col-12 col-md-4">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-12 col-md-4 py-2 py-md-4">
                        <input type="submit" class="btn btn-success btn-block pb-3" value="Valider">
                    </div>
                    <div class="col-12">
                        <p class="text-center">
                            <a href="{{ path('user_inscription') }}">Pas encore membre ? Inscrivez-vous !</a>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}