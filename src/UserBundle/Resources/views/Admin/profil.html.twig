{% extends 'NAOBundle::layout.html.twig' %}
{% block title %}
    Mon profil - NAO
{% endblock %}

{% block body %}
    <!-- PROFILE SECTION -->
    <section id="my-profile">
        <div class="container py-5 bg-green px-md-5">
            <div class="row">

                {% include 'UserBundle:Default:side_menu_top.html.twig' %}

                <div class="col-12 col-md-8 text-white pl-md-4">
                    <div class="row justify-content-end">
                        <div class="col-12 d-md-none pb-4">
                            <h1>Modifier mon profil</h1>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="card mb-3 text-right">
                                {% if avatar is empty %}
                                    <img src="{{ asset('img/avatars/LOGO-site.png') }}" alt="" class="card-img">
                                {% else %}
                                    <img src="{{ asset('img/avatars/' ~ avatar) }}" alt="" class="card-img">
                                {% endif %}
                                <div class="card-img-overlay">
                                    <a href="#" class="btn btn-success" title="Changer mon image"
                                       data-toggle="modal" data-target="#loginModal">
                                        <i class="fa fa-picture-o"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_start(form) }}
                    <div class="form-group row">
                        {{ form_label(form.email) }}
                        <div class="col-12 col-md-8">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.plainPassword.first) }}
                        <div class="col-12 col-md-8">
                            {{ form_widget(form.plainPassword.first) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.plainPassword.second) }}
                        <div class="col-12 col-md-8">
                            {{ form_widget(form.plainPassword.second) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.town) }}
                        <div class="col-12 col-md-8">
                            {{ form_widget(form.town) }}
                            {{ form_errors(form.town) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.phone) }}
                        <div class="col-12 col-md-8">
                            {{ form_widget(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>
                    <div class="row justify-content-center py-2 py-md-5">
                        <div class="col-12 col-md-4">
                            <button type="submit" class="btn btn-success btn-block" formnovalidate>Valider</button>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

    <!-- ADD IMAGE MODAL -->
    <div class="modal" id="loginModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-dark-green">
                    <h5 class="modal-title">Changer mon image</h5>
                    <button class="close" data-dismiss="modal">&times;</button>
                </div>
                <form action="{{ path('user_upload_picture') }}" method="post" enctype="multipart/form-data">
                <div class="modal-body bg-green">
                    <div class="form-group">
                        <div class="col-12">
                            Choisissez une image à télécharger...
                        </div>
                        <div class="col-12">
                            <input type="file" name="avatar" id="avatar">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-success" formnovalidate>Changer image</button>
                </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}